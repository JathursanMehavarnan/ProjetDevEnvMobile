<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupInfosActivity">
    <include
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonStudent1"
            style="@style/buttons"
            android:text="@string/student_button1"/>

        <Button
            android:id="@+id/buttonStudent2"
            style="@style/buttons"
            android:text="@string/student_button2"/>

        <Button
            android:id="@+id/buttonStudent3"
            style="@style/buttons"
            android:text="@string/student_button3"/>
    </LinearLayout>
</LinearLayout>